{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@rsces/assets/*": ["assets/*"],
      "@rsces/components/*": ["components/*"],
      "@rsces/layout/*": ["layout/*"],
      "@rsces/pages/*": ["pages/*"],
      "@rsces/providers/*": ["providers/*"],
      "@rsces/routes/*": ["routes/*"],
      "@rsces/theme/*": ["theme/*"],
      "@rsces/service/*": ["service/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
